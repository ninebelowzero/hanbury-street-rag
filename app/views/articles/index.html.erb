
<%= render "masthead" %>



<div class="row">

<div class="medium-8 columns">

<%= image_tag(@articles[0].image.url, size: "450x315") %>
<h4><%= link_to @articles[0].headline, @articles[0] %></h4>
<h5><%= @articles[0].standfirst %></h5>

	<div class="medium-6 columns">
		<% @articles[1..7].each do |article| %>
				<br>
				<h4><%= link_to article.headline, article %></h4>
				<%= image_tag(article.image.thumb.url, class: "thumbnail") %>
				<p><%= article.standfirst %></p>
		<% end %>
	</div>

	<div class="medium-6 columns">
		<% @articles[8..14].each do |article| %>
				<br>
				<h4><%= link_to article.headline, article %></h4>
				<%= image_tag(article.image.thumb.url, class: "thumbnail") %>
				<p><%= article.standfirst %></p>
		<% end %>
	</div>

</div>

	<div class="medium-4 columns">
		<%= render "ads" %>
	</div>

</div>