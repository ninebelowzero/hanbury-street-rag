<% if user_signed_in? && current_user.role == "admin"%>

  <div class="large-6 column narrow-column">
  
    <h2>Topics:</h2>
    <br>
    <br>
    
    <% Topic.all.each do |topic| %>
      <p class="category-title">&nbsp;&nbsp;<%= topic.name.upcase %></p>
      <%= link_to "Remove", topic_path(topic.id), method: :delete, data: {confirm: "Are you   sure  you want to delete this topic? It will be removed from the header bar and all   articles." }, class: "button radius category-button" %>
      <br>
      <hr>
    <% end %>
    
    <%= form_for(Topic.new) do |f| %>
      <%= f.label "Topic name:" %><br>
      <%= f.text_field(:name, class: "small-field") %>
      <%= f.submit "Add topic", data: {confirm: "Are you sure you want to create a new topic? This will appear on the header bar."}, class: "button radius medium-button" %>
    <% end %>
  
  </div>
  
  <div class="large-6 column narrow-column">
  
    <h2>Regions:</h2>
    <br>
    <br>
    
    <% Region.all.each do |region| %>
      <p class="category-title">&nbsp;&nbsp;<%= region.name.upcase %></p>
      <%= link_to "Remove", region_path(region.id), method: :delete, data: {confirm: "Are you  sure you want to delete this region? It will be removed from the regions dropdown menu and all articles." }, class: "button radius category-button" %>
      <br>
      <hr>
    <% end %>
    
    <%= form_for(Region.new) do |f| %>
      <%= f.label "Region name:" %><br>
      <%= f.text_field(:name, class: "small-field") %>
      <%= f.submit "Add region", data: {confirm: "Are you sure you want to create a new   region? This will appear on the regions dropdown menu."}, class: "button radius medium-button" %>
    <% end %>
  
  </div>

<% end %>
