
<h2>Topics:</h2>

<% Topic.all.each do |topic| %>
  <p><%= topic.name %></p>
  <%= link_to "Remove", topic_path(topic.id), method: :delete, data: {confirm: "Are you sure you want to delete this topic? It will be removed from the header bar and all articles." }, class: "button radius" %>
<% end %>

<%= form_for(Topic.new) do |f| %>
  <%= f.label "Topic name:" %><br>
  <%= f.text_field :name %>
  <%= f.submit "Add topic", data: {confirm: "Are you sure you want to  create a new topic? This will appear on the header bar."}, class: "button radius" %>
<% end %>

