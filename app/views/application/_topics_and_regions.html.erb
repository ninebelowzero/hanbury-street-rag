<% if user_signed_in? && current_user.role == "admin"%>

  <div class="medium-6 column">
  
    <h2>Topics:</h2>
    
    <% Topic.all.each do |topic| %>
      <p><%= topic.name %></p>
      <%= link_to "Remove", topic_path(topic.id), method: :delete, data: {confirm: "Are you   sure  you want to delete this topic? It will be removed from the header bar and all   articles." }, class: "button radius" %>
    <% end %>
    
    <%= form_for(Topic.new) do |f| %>
      <%= f.label "Topic name:" %><br>
      <%= f.text_field :name %>
      <%= f.submit "Add topic", data: {confirm: "Are you sure you want to create a new topic?   This  will appear on the header bar."}, class: "button radius" %>
    <% end %>
  
  </div>
  
  <div class="medium-6 column">
  
    <h2>Regions:</h2>
    
    <% Region.all.each do |region| %>
      <p><%= region.name %></p>
      <%= link_to "Remove", region_path(region.id), method: :delete, data: {confirm: "Are you   sure  you want to delete this region? It will be removed from the regions dropdown menu   and all  articles." }, class: "button radius" %>
    <% end %>
    
    <%= form_for(Region.new) do |f| %>
      <%= f.label "Region name:" %><br>
      <%= f.text_field :name %>
      <%= f.submit "Add region", data: {confirm: "Are you sure you want to create a new   region?   This will appear on the regions dropdown menu."}, class: "button radius" %>
    <% end %>
  
  </div>

<% end %>
